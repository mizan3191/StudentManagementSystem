@model RegisterModel
@using Microsoft.Extensions.Options
@inject IOptions<ReCaptchaKey> ReCaptchaLink

@{
    Layout = "_AccountLayout";

    ViewData["Title"] = "Login";
}

<div class="card">
    <div class="card-body login-card-body">
        <h3 class="login-box-msg">Sign In</h3>

        <form asp-action="Register" asp-antiforgery="true" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="input-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Institute Name">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-building"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div>
                @Html.HiddenFor(m=>m.ReCaptchaToken)
            </div>
            <div class="form-group" style="">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        I Agree the terms & conditions
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
            <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" type="submit">Sign Up</button>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script src="https://www.google.com/recaptcha/api.js?render=@ReCaptchaLink.Value.ReCAPTCHASiteKey"></script>

<script>

    grecaptcha.ready(function () {
        grecaptcha.execute('@ReCaptchaLink.Value.ReCAPTCHASiteKey', { action: 'Register' }).then(function (token) {
            $("#ReCaptchaToken").val(token);
        });
    });
</script>

<script>
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>
}