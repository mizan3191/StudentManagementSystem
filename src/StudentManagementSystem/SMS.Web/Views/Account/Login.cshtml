@model LoginModel

@{
     Layout = "_AccountLayout";

    ViewData["Title"] = "Login";
}


<div class="card">
    <div class="card-body login-card-body">
        <h3 class="login-box-msg">Sign In</h3>

        <form asp-action="Login" asp-antiforgery="true" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
            </div>
        </form>

        <p class="mb-0">
            <a asp-action="ForgotPassword" asp-controller="Account" class="text-center">Forgot Password</a>
        </p>

        <p class="mb-0">
            <a asp-action="Register" asp-controller="Account" class="text-center">Register</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}